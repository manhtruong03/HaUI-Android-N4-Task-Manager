<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="20dp"
        android:text="Thêm Nhãn Công Việc"
        android:textSize="25dp"
        android:textStyle="bold" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:hint="@string/name">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/editTextNewTag"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:inputType="text"
            android:paddingStart="20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:columnCount="3"
        android:orientation="horizontal"
        android:rowCount="3">

        <!-- Row 1 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <!-- First RadioButton with RelativeLayout -->
            <RadioButton
                android:id="@+id/radioButtonColor1"
                android:layout_width="29dp"
                android:layout_height="wrap_content"
                android:tag="#EE0000" />

            <RelativeLayout
                android:layout_width="53dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="#EE0000"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>

        <!-- Second RadioButton with RelativeLayout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonColor2"
                android:layout_width="29dp"
                android:layout_height="wrap_content"
                android:tag="#FFCC33" />

            <RelativeLayout
                android:layout_width="50sp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="#FFCC33"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>

        <!-- Third RadioButton with RelativeLayout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonColor3"
                android:layout_width="29dp"
                android:layout_height="wrap_content"
                android:tag="#00CC33" />

            <RelativeLayout
                android:layout_width="50sp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="#00CC33"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>

        <!-- Row 2 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <!-- Fourth RadioButton with RelativeLayout -->
            <RadioButton
                android:id="@+id/radioButtonColor4"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:tag="#00CCFF" />

            <RelativeLayout
                android:layout_width="50sp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="#00CCFF"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>

        <!-- Fifth RadioButton with RelativeLayout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonColor5"
                android:layout_width="29dp"
                android:layout_height="wrap_content"
                android:tag="#4169E1" />

            <RelativeLayout
                android:layout_width="50sp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="#4169E1"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>

        <!-- Sixth RadioButton with RelativeLayout -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radioButtonColor6"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:tag="#FF6699" />

            <RelativeLayout
                android:layout_width="51dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="#FF6699"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>

        <!-- Row 3 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_columnWeight="1"
            android:orientation="horizontal">

            <!-- Seventh RadioButton with RelativeLayout -->
            <RadioButton
                android:id="@+id/radioButtonColor7"
                android:layout_width="31dp"
                android:layout_height="wrap_content"
                android:tag="#A9A9A9" />

            <RelativeLayout
                android:layout_width="50sp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_margin="10dp"
                android:background="#A9A9A9"
                android:clickable="false"
                android:focusable="false"
                android:focusableInTouchMode="false" />
        </LinearLayout>

    </GridLayout>

    <Button
        android:id="@+id/btnAddTag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="30dp"
        android:text="Thêm" />

</LinearLayout>